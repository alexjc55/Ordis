{
  "version": "1.0.0",
  "codename": "Stable Release",
  "releaseDate": "2024-01-19",
  "features": [
    "Complete e-commerce system with Russian localization",
    "Admin dashboard with role-based access control",
    "Product management with categories and images",
    "Order management with delivery scheduling",
    "User authentication and profile management",
    "Shopping cart with delivery fee calculation",
    "WhatsApp integration for customer support",
    "Configurable store settings and branding",
    "Safe auto-update system for multi-site deployment"
  ],
  "database": {
    "schema_version": "1.0.0",
